{
  "name": "whatsapp-api-platform",
  "version": "1.0.0",
  "description": "Plataforma API de WhatsApp para mÃºltiples clientes",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "server:dev": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "concurrently \"npm run build:client\" \"npm run build:server\"",
    "build:client": "cd frontend && npm run build",
    "build:server": "cd backend && npm run build",
    "install:all": "npm install && concurrently \"npm run install:client\" \"npm run install:server\"",
    "install:client": "cd frontend && npm install",
    "install:server": "cd backend && npm install"
  },
  "keywords": [
    "whatsapp",
    "api",
    "node",
    "react",
    "vite",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}
