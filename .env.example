# Credenciales de MongoDB
MONGO_USERNAME=whatsapp_user
MONGO_PASSWORD=strong_password_here

# Secreto para JWT
JWT_SECRET=your_strong_jwt_secret_key_here

# Variables de entorno para el backend
NODE_ENV=production
PORT=3000
MONGODB_URI=mongodb://whatsapp_user:strong_password_here@mongodb:27017/whatsapp_api?authSource=admin
SESSION_PATH=/app/sessions

# Variables para el deployment
COMPOSE_PROJECT_NAME=whatsapp-api

# Variables opcionales para el frontend (si necesitas personalizar la URL de la API)
VITE_API_URL=http://localhost